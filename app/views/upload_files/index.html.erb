<p id="notice"><%= notice %></p>

<h1>Listing Upload Files</h1>

<table>
  <thead>
    <tr>
      <th>Filename</th>
      <th>FileSize</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @upload_files.each do |upload_file| %>
      <tr>
        <td><%= upload_file.filename %></td>
        <td><%= upload_file.file.length %> bytes</td>
        <td><%= link_to 'Show', upload_file %></td>
        <td><%= link_to 'Edit', edit_upload_file_path(upload_file) %></td>
        <td><%= link_to 'Destroy', upload_file, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

